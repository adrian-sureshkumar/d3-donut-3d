{
  "name": "@adrian-sureshkumar/d3-donut-3d",
  "version": "1.0.0",
  "description": "Library for rendering 3D donut charts with D3",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "bundle:examples": "browserify -p tinyify examples/donut-3d-example.js -o examples/donut-3d-example.bundle.js",
    "prepack": "npm run build",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrian-sureshkumar/d3-donut-3d.git"
  },
  "author": "Adrian Sureshkumar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adrian-sureshkumar/d3-donut-3d/issues"
  },
  "homepage": "https://github.com/adrian-sureshkumar/d3-donut-3d#readme",
  "devDependencies": {
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.17",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "browserify": "^16.5.0",
    "eslint": "^6.1.0",
    "faker": "^4.1.0",
    "jest": "^24.9.0",
    "tinyify": "^2.5.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@types/d3": "^5.7.2",
    "d3": "^5.9.7",
    "x3dom": "^1.8.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "lib/**/*",
    "examples/**/*.bundle.js"
  ],
  "jest": {
    "preset": "ts-jest"
  }
}
